@using ToDoApp.Web.ViewModels.Task
@model List<TaskAllViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <div class="header">
        <div>
            <h2 class="title">Your Tasks</h2>
        </div>
        <div class="d-flex align-items-center justify-content-between nav-buttons">
            <a class="btn btn-primary d-inline" asp-controller="Task" asp-action="AllDoneTasks" role="button">Your done tasks</a>
            @if (Model.Count != 0)
            {
                <a asp-controller="Task" asp-action="Add" class="btn btn-primary d-inline">Add</a>
            }
        </div>
    </div>
    <hr />
</div>
<div>
    @if (Model.Count == 0)
    {
        <div class="mx-auto">
            <h4 class="text-center">You do not have any tasks yet</h4>
        </div>
        <div class="d-block align-items-center">
            <a class="btn btn-primary" asp-controller="Task" asp-action="Add" role="button">Add</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var task in Model)
            {
                <partial name="_TaskPartial" model="@task" />
            }
        </div>
    }
</div>

@section Scripts
{
    <partial name="_Styles" />
}