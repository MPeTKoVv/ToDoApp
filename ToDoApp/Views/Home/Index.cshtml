@using ToDoApp.Web.ViewModels.Task
@model List<TaskViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <div class="d-flex align-items-center justify-content-between">
        <h2 class="d-inline">Your tasks</h2>
        @if (Model.Count != 0)
        {
            <a class="btn btn-primary d-inline" asp-controller="Task" asp-action="Add" role="button">Add</a>
        }
    </div>
    <hr />
</div>
<div>
    @if (Model.Count == 0)
    {
        <div class="mx-auto">
            <h4 class="text-center">You do not have any tasks yet</h4>
        </div>
        <div class="d-block align-items-center">
            <a class="btn btn-primary" asp-controller="Task" asp-action="Add" role="button">Add</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var task in Model)
            {
                <div class="col-md-3">
                    <div class="card mb-2 d-flex align-items-center">
                        <h4>@task.Title</h4>
                        <p>Added on: @task.CreatedOn<p>
                        <p>Deadline: @task.Deadline<p>
                            <div>
                                <a class="btn btn-success" asp-controller="Task" asp-action="Done" role="button">Done</a>

                            </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
